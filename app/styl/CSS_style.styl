body 
	background-color #164B69
	font-size 14px
	font-family Arial
	
a 
	text-decoration none
	color black

.CSS 
	background-color #dcdcdc

.container 
	background-color #e3e3e3
	min-width 700px
	min-height 700px
	width 700px
	height 700px
	margin 0 auto

.menu 
	font-weight bold
	height 5%
	margin-bottom 5px
	& > ul 
		display flex
		list-style none
		align-items center
		justify-content space-evenly
		padding-top 5px
		flex-wrap wrap
		line-height 2

li 
	padding 10px

.text_info 
	display flex
	flex-wrap wrap
	text-align justify
	line-height 2
	text-indent 1.5em
	height 45%
	flex-direction column
	p 
		padding 5px
		margin 0 5px
		width inherit

.first_p 
	width 100%

.second_p 
	width 60%
	float left

.pic 
	width 35%
	max-width 300px
	margin 5px
	float left
	width inherit
	max-width none

div 
	img 
		width 100%
		height 100%
		display block
		margin 0 auto

.video_info 
	margin 10px
	display flex
	justify-content center
	padding 5px
	height 50%
	width 100%
	padding 0
	margin 0

@media (max-width &:600px) 
	.container
       	min-width auto
		min-height auto
		width 100%
		height 100%
	.cost 
		display flex
		flex-direction column-reverse
